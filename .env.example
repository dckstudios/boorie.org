# Environment Configuration Example
# Copy this file to .env and update with your values

# Application
BOORIE_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://boorie:boorie_pass@localhost:5432/boorie_db

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://boorie.org"]

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
LITELLM_MODEL=gpt-3.5-turbo
OPENAI_API_KEY=your-openai-api-key
# Alternative LLMs
# ANTHROPIC_API_KEY=your-anthropic-key
# HUGGINGFACE_API_KEY=your-huggingface-key

# WNTR Configuration
WNTR_TEMP_DIR=/tmp/wntr
WNTR_MAX_ITERATIONS=100

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@boorie.org

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=False

# External Services (Optional)
STRIPE_API_KEY=your-stripe-key
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_API_DOCS=True
ENABLE_WEBHOOKS=True
ENABLE_RAG=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_EMBEDDING_MODEL=text-embedding-ada-002
RAG_VECTOR_DB=chroma